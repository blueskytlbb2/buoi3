<!DOCTYPE html>
<html>
	<head>
		<title>Bài 4</title>
		<meta charset="utf-8" />
	</head>
	<body>
	<script>
		function KiemTra()
		{
			var tdn = f.Username.value;
			var mk= f.MatKhau.value;
			var nlmk= f.Nhaplaimatkhau.value;
			
			// Thong bao 2
			if(tdn == "" || mk == "" || nlmk == "")
			{
				alert('Các ô bắt buộc phải nhập.');
				return false;
			}
			if(tdn.length < 6)
			{
				alert('Tên đăng nhập phải từ đủ 6 ký tự trở lên.');
				return false;
			}
			if(mk!=nlmk)
			{
				alert('Mật khẩu không trùng khớp.');
				return false;
			}
			return true;
		}
	</script>
		<form name="f">	
			<table>
				<tr>
					<td>Tên đăng nhập:</td>
					<td><input type="text" name="Username"> (Nhiều hơn 6 ký tự)</td>
				</tr>
				<tr>
					<td>Mật khẩu:</td>
					<td><input type="password" name="MatKhau"></td>
				</tr>
				<tr>
					<td>Nhập lại mật khẩu:</td>
					<td><input type="password" name="Nhaplaimatkhau"</td>
				</tr>
			</table>
			<button type="submit" onclick="return KiemTra()">Kiểm tra</button>
		</form>
	</body>
</html>